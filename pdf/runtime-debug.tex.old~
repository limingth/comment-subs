161         p++;
162         for (p = strtok_r(p, " \t", &saveptr); p != NULL;
163                                         p = strtok_r(NULL, " \t", &saveptr)     ) {
164                 struct kmod_module *depmod;
165                 const char *path;
166 
167                 printf("<mydebug> p = %s\n", p);
168                 path = path_join(p, dirnamelen, buf);
169                 if (path == NULL) {
